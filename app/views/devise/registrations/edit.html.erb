<h2>修改個人資料</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= avatar_tag(current_user) %>
  <div class="form-inputs">
    <%= f.input :avatar, autofocus: true, label: '請放你的顯示圖片' %>
    <%= f.input :email, required: true, autofocus: true, label: 'e-mail' %>
    <%= f.input :name, required: true, autofocus: true, label: '姓名/暱稱' %>
    <%= f.input :age, autofocus: true, label: '年齡' %>
    
    <%= f.input :gender, required: true, autofocus: true, label: '性別', as: :radio_buttons,item_wrapper_class: 'inline', collection: User.genders.keys %>
    <%= f.input :mobile, required: true, autofocus: true, label: '手機' %>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class="row">
      <div class="col-6">
        <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="col-6">
        <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
      </div>
    </div>
    
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
