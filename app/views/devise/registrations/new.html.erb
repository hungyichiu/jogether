<div class="d-flex justify-content-center h-100">
    <div class="card car1">
      <div class="card-header">
        <h2 class="regh2" >註冊新帳號</h2>
        <div class="d-flex justify-content-end social_icon">
          <span>
            <%= link_to "", user_facebook_omniauth_authorize_path, class:"fab fa-facebook-square ylloow"%>
          </span>
          <span>
            <%= link_to "", user_google_oauth2_omniauth_authorize_path, class:"fab fa-google-plus-square ylloow" %>
          </span>
        </div>
      </div>

      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          
          <div class="form-inputs">
              <div class="input-group form-group">
                <%# <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-arrow-alt-circle-right"></i></span>
                </div> %>
                <%= f.input :email,
                            # label: email,t('form.email'),
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "電子信箱" },class:"form-control"%>
              </div>

              <div class="input-group form-group">
                <%# <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-arrow-alt-circle-right"></i></span>
                </div> %>
                <%= f.input :password,
                            # label: password,t('form.password')
                            required: true,
                            hint: ("最少需要 #{@minimum_password_length} 位字元" if @minimum_password_length),
                            input_html: { autocomplete: "密碼" },class:"form-control" %>
              </div>

              <div class="input-group form-group">
                <%# <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-arrow-alt-circle-right"></i></span>
                </div> %>
                <%= f.input :password_confirmation,
                              # label: confirm,t('form.confirm')
                              required: true,
                              input_html: { autocomplete: "密碼確認" },class:"form-control" %>
              </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "註冊", class: "btn float-right login_btn" %>        
          </div>

          <div class="form-group">
            <%= recaptcha_tags site_key: ENV["RECAPTCHA_V2_CHECKBOX_SITE_KEY"] %>
          </div>
        <% end %>
      </div>

      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          <span>已有帳號？點我<%= link_to "登入", user_session_path%></span>
        </div>
      </div>
    </div>
</div>


<%#= render "devise/shared/links" %>
