<h2 class="regh2" >登入 Login</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs aabb">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

    <div class="wrapp aabb">
      <div class="form-actions aacc">
        <%= f.button :submit, "Log in", class: "btn btn-xs btn-success" %>
        <span ><%= link_to "點我註冊新帳號！", new_user_registration_path %></span>
      </div>
    </div>

    <div class="items aabb">
      <span class="btntest btnf" ><%= link_to "SIGN IN WITH FACEBOOK", user_facebook_omniauth_authorize_path,
      class: 'fb-link-to-text-color' %></span>
      <span class="btntest btng" ><%= link_to "SIGN IN WITH GOOGLE", user_google_oauth2_omniauth_authorize_path,
      class: 'google-link-to-text-color' %></span>
    </div>
<% end %>


