<div class="d-flex justify-content-center h-100">
    <div class="card carlogin">
      <div class="card-header">
        <h2 class="regh2" >登入 Login</h2>
        <div class="d-flex justify-content-end social_icon">
          <span>
            <%= link_to "", user_facebook_omniauth_authorize_path, class:"fab fa-facebook-square ylloow"%>
          </span>
          <span>
            <%= link_to "", user_google_oauth2_omniauth_authorize_path, class:"fab fa-google-plus-square ylloow" %>
          </span>
        </div>
      </div>
        <%#= byebug %>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
          
          <div class="form-inputs">
              <div class="input-group form-group">
                <%# <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-arrow-alt-circle-right"></i></span>
                </div> %>
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" },class:"form-control"%>
              </div>

              <div class="input-group form-group">
                <%# <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-arrow-alt-circle-right"></i></span>
                </div> %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" },class:"form-control" %>
              </div>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Login", class: "btn float-right login_btn" %>        
          </div>
          <div class="d-flex links">
            <span>還沒有帳號？點我註冊<%= link_to "Sign Up", new_user_registration_path%></span>
          </div>
        <% end %>
      </div>
    </div>
</div>


<%#= render "devise/shared/links" %>