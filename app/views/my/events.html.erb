<h1>我的活動</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">活動名稱</th>
      <th scope="col">活動日期</th>
      <th scope="col">活動狀態</th>
      <th scope="col">身份</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.events do |event| %>
    <tr>
      <td><%= event.event_name %></td>
      <td><%= "#{event.event_start} - #{event.event_end}" %></td>
      <td><%= event.event_logs.status %></td>
      <td><%= event.event_logs.role %></td>
    </tr>
    <% end %>
  </tbody>
</table>
