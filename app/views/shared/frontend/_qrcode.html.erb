 <!-- Modal -->
<div class="modal fade" id="eventQRCode" tabindex="-1" role="dialog" aria-labelledby="eventQRCodeTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventQRCodeTitle">和朋友分享</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div id="qrcode"></div>
        <%= text_field_tag(:text, value="#{ @link }", class: "qr-link") %>
        <input type="button" onClick="copyUrl2()" value="複製" class="btn btn-sm btn-warning"/>
      </div>
    </div>
  </div>
</div>

<script >
  function copyUrl2() {
    var Url2 = document.getElementById("text");
    Url2.select(); // 選擇物件
    document.execCommand("Copy"); // 執行瀏覽器複製命令
  }
</script>
