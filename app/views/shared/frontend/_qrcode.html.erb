 <!-- Modal -->
<div class="modal fade" id="eventQRCode" tabindex="-1" role="dialog" aria-labelledby="eventQRCodeTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventQRCodeTitle">和朋友分享</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div id="qrcode"></div>
        <%= text_field_tag(:text, value="#{ @link }", class: "qr-link") %>
        <button onclick="copyFunction()" class="btn btn-sm btn-warning">複製</button>
        
      </div>
    </div>
  </div>
</div>

<script >
$(document).ready(function(){
function copyFunction() {
  var copyText = $("#text");
  copyText.select();
  document.execCommand("Copy");
  alert("Copied the text: " + copyText.value);
}
  });
</script>
