<% events.each do |event| %>
<div class="card">
  <%= activity_img(event, class_name: "card-img-top") %>
  <div class="card-body">
    <h5 class="card-title"><%= event.event_name %></h5>
    <p class="card-text">活動日期：<%= "#{event.event_start} ~ #{event.event_end}" %></p>
    <p class="card-text"><%= event.description %></p>
    <%= link_to "活動詳情", event_path(event), class:"btn btn-primary" %>
    <%= link_to "收藏", add_like_event_path(event), class:"btn btn-outline-danger", method: 'put' %>
  </div>
</div>
<% end %>
