<h6>我要留言！</h6>

<%= form_with model: @comment, local: true do |f| %>

<div class="form-group">
  <label for="name">暱稱：
    <%# <input class="form-control" type="text" placeholder="Default input" id="bootstrap-overrides"> %>
    <%= f.text_field :name, class: 'form-control', id: "bootstrap-overrides", input_html: {value: current_user.name} %>
  </label>
</div>

<div class="form-group">
  <label for="body">留言：
    <div class="form-group">
      <%# <textarea class="form-control" id="bootstrap-overrides" rows="3"></textarea> %>
      <%= f.text_area :body, class: 'form-control', id: "bootstrap-overrides" %>
    </div>
  </label>
</div>

<%# <button type="submit" class="btn btn-warning btn-sm">Submit</button> %>
  <%= f.submit "送出", class: "btn btn-warning btn-sm" %>
<% end %>




